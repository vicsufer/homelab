{
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    ":disableRateLimiting",
    ":prHourlyLimitNone",
    ":automergePatch",
    ":approveMajorUpdates",
    ":configMigration"
  ],
  "argocd": {
    "fileMatch": ["kluster-manifests/argocd-apps/.*Application.+\.yaml$"],
    "labels": ["renovate", "ArgoCD Application"],
  },
  "helm-values": {
    "fileMatch": ["kluster-manifests/argocd-apps/**/.*values.+\.yaml$"],
    "labels": ["renovate", "helm"],
  },
  "labels": ["dependencies", "renovate"],
  "ignorePaths": [
    "**/ansible/**"
  ]
}
